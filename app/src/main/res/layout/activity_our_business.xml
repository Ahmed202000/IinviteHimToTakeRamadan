<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.OurBusiness">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:fontFamily="@font/extra_light"
        android:gravity="center"
        android:text="تطبيقتنا علي متجر جوجل "
        android:textColor="@color/text"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/text"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/activity_our_business_app_albaze_wep_sit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/extra_light"
        android:text="موقع الباز اضغط هنا"
        android:textColor="@color/text"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/text"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/activity_our_business_app_albaze_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/extra_light"
        android:text="تطبيق الباز رفيق اضغط هنا "
        android:textColor="@color/text"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/text"
        android:layout_marginTop="@dimen/_15sdp"/>

    <TextView
        android:id="@+id/activity_our_business_app_albaze_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/extra_light"
        android:text="تطبيق الباز عميل اضغط هنا "
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/text"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/text"
        android:layout_marginTop="@dimen/_15sdp"/>



</LinearLayout>