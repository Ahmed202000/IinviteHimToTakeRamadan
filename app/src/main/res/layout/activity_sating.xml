<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Sating"
    android:layoutDirection="rtl">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp">


                <CheckBox
                    android:id="@+id/activity_sating_prayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/extra_light"
                    android:text="تشغيل اشعارات الادعيه"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/text"
                    android:layout_marginTop="@dimen/_15sdp"/>

                <TextView
                    android:id="@+id/activity_sating_our_business"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/extra_light"
                    android:text="اعمالنا"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/text"
                    android:layout_marginTop="@dimen/_15sdp"/>



                <TextView
                    android:id="@+id/activity_sating_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/extra_light"
                    android:text="قيم التطبيق"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/text"
                    android:layout_marginTop="@dimen/_15sdp"/>



                <TextView
                    android:id="@+id/activity_sating_privacy_policies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/extra_light"
                    android:text="سياسات الخصوصيه"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/text"
                    android:layout_marginTop="@dimen/_15sdp"/>



            </LinearLayout>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>